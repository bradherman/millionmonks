<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<% if current_user %>
  <p>Welcome <%= current_user.login %> | <%= link_to "Logout", logout_path %></p>
<% else %>
  <p><%= link_to "Login", login_path %>
<% end %>
<%= yield %>

</body>
</html>
